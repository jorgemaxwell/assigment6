<div class="row">
    <div class="col-md-12">
        <br>
        <h2>Courses
            <a href="/courses/add" class="btn btn-success float-right">Add New Course</a>
        </h2>
        <hr />
        <div class="table-responsive ">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">Course Code</th>
                        <th scope="col">Course Description</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        {{#each courses}}

                        <td><a href="/course/{{courseId}}"> {{courseId}}</a> </td>
                        <td><a href="/students/course={{courseId}}">{{courseDescription}}</a></td>
                        <td><a href='/course/delete/{{courseId}}' class="btn btn-danger">    remove</a></td>
                    </tr>
                    {{/each}}


                </tbody>
            </table>
        </div>
        {{#unless courses}}
        <div class="col-md-12 text-center">
            <strong>{{message}}</strong>
        </div>
        {{/unless}}

    </div>
</div>